{
  "name": "node-js-crud-api",
  "version": "1.0.0",
  "description": "RSS NodeJS 2023Q2 CRUD API task",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"./**/*.ts\"",
    "lint": "eslint \"./**/*.ts\" --fix",
    "start:dev": "tsnd --respawn --transpile-only ./index.ts",
    "start:dev:cluster": "tsnd --respawn --transpile-only ./index.ts --cluster",
    "start:prod": "tsc && node ./dist/index.js",
    "start:prod:cluster": "tsc && node ./dist/index.js --cluster"
  },
  "author": "Ilja Gusiatin",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.3.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.5"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
